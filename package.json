{
  "name": "double-take",
  "version": "2",
  "description": "Unified UI and API for processing and training images for facial recognition",
  "scripts": {
    "frontend": "cd ./frontend && bun run serve",
    "api": "exec nodemon -e yml,js --watch ./.storage/config --watch ./api -q --exec 'bun' api/server.js || true",
    "bump": "bun version $VERSION --no-git-tag-version --allow-same-version && cd ./api && bun version $VERSION --no-git-tag-version --allow-same-version && cd ../frontend && bun version $VERSION --no-git-tag-version --allow-same-version",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrashevich/double-take.git"
  },
  "author": "David Jakowenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skrashevich/double-take/issues"
  },
  "homepage": "https://github.com/skrashevich/double-take#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.7"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "form-data": "^4.0.0",
    "node-ipc": "^11.1.0"
  }
}
