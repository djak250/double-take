{
  "name": "double-take",
  "version": "1.13.11.9rc1",
  "description": "Unified UI and API for processing and training images for facial recognition",
  "scripts": {
    "prepare": "husky install",
    "frontend": "cd ./frontend && npm run serve",
    "frontend-build": "cd ./frontend && npm run build",
    "api": "exec node api/server.js || true",
    "bump": "npm version $VERSION --no-git-tag-version --allow-same-version && cd ./api && npm version $VERSION --no-git-tag-version --allow-same-version && cd ../frontend && npm version $VERSION --no-git-tag-version --allow-same-version",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "rebuild": "electron-rebuild -f -d -m ./api/",
    "postinstall": "npx electron-builder install-app-deps",
    "build": "rm -rf dist && cd api && npm install && cd ../frontend && npm install && npm run build && cd ../ && npx electron-builder build -mlw",
    "start": "cd ./frontend && npm run build && cd .. && FRONTEND=frontend/dist/ node api/server.js",
    "publish": "npx electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skrashevich/double-take.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./main.js",
  "author": "Sergei Krashevich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skrashevich/double-take/issues"
  },
  "homepage": "https://github.com/skrashevich/double-take#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^18.18.0",
    "electron": "28.1.1",
    "electron-builder": "^24.9.1",
    "electron-rebuild": ">=3.2.8",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "node-gyp": ">=10.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.4"
  },
  "dependencies": {
    "@appland/appmap-agent-js": "^14.2.0",
    "axios": "^1.2.1",
    "form-data": "^4.0.0"
  },
  "overrides": {
    "posix-socket": {
      "node-gyp": ">=10.0.1"
    }
  },
  "testPathIgnorePatterns": [
    "*.spec.ts"
  ],
  "build": {
    "appId": "site.double-take.app",
    "productName": "Double-Take",
    "includeSubNodeModules": true,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "s3",
      "bucket": "double-take-artifacts",
      "region": "eu",
      "endpoint": "https://s3.svk.app:9000",
      "path": "/desktop/"
    }
  }
}
